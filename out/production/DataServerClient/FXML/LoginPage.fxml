<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller">
    <center>
        <GridPane alignment="CENTER">
            <Text text="Cabin number:  " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Text text="Password:  " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id = "loginCabinNo" maxWidth="150" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <PasswordField fx:id = "loginPassword" maxWidth="150" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <HBox prefWidth="150" spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Button text = "Cancel" alignment="CENTER" onAction="#toMainPage"/>
                <Button fx:id="loginConfirmButton" text = "Log in" alignment="CENTER" onAction="#logIn"/>
            </HBox>
        </GridPane>
    </center>
</BorderPane>
